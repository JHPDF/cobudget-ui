### @ngInject ###
module.exports = ($scope, group, memberships) ->
    group.set('memberships', memberships)
    $scope.group = group

    $scope.banner = {
      name: "group"
      entity:
        name: group.name
        ref: "layout.group.rounds({ groupId: group.id })"
      subtext: "{{ group.memberships.length }} members"
    }

    $scope.tabs = [{
      name: "rounds"
      label: "ROUNDS"
    }, {
      name: "members"
      label: "MEMBERS"
    }]
