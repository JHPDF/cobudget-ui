moment = require('moment')

### @ngInject ###
module.exports = (UserModel) ->
  class MembershipModel
    constructor: (data = {}) ->
      @id = data.id
      @groupId = data.groupId
      @isAdmin = data.isAdmin
      @createdAt = moment(data.createdAt)
      @user = new UserModel(data.user)

    serialize: ->
      {
        id: @id
        groupId: @groupId
        isAdmin: @isAdmin
        userId: @user.id
      }
