### @ngInject ###
module.exports = ($scope, group, round, memberships) ->
    group.set('memberships', memberships)
    $scope.group = group
    $scope.round = round

    $scope.banner =
      name: "round"
      entity:
        name: $scope.round.name
        ref: ".buckets"
      link:
        name: group.name
        ref: "layout.group.rounds({ groupId: group.id })"
      subtext: """
        {{ round.startsAt.format('Do MMM YYYY') }}
        -
        {{ round.endsAt.format('Do MMM YYYY') }}
        <span class="label label-{{ round.status.class }}">
          {{ round.status.label }}
        </span>
        """

    $scope.tabs = [{
      name: "buckets"
      label: "BUCKETS"
    }, {
      name: "contributors"
      label: "CONTRIBUTORS"
    }]
