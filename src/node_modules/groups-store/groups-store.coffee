module.exports = (Restangular, GroupModel) ->

  get: (group_id)->
    Restangular.one('groups', group_id).get()
    .then (group) ->
      new GroupModel(group.plain())

  all: () ->
    Restangular.all('groups').getList()
    .then (groups) ->
      _.map groups, (group) ->
        new GroupModel(group.plain())
