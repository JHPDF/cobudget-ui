Decimal = require('decimal')

### @ngInject ###
module.exports = (UserModel) ->
  class AllocationModel
    constructor: (data = {}) ->
      @id = data.id
      @userId = data.userId
      @roundId = data.roundId
      @amount = new Decimal(data.amount or 0)

    serialize: ->
      {
        id: @id,
        userId: @userId
        roundId: @roundId
        amount: @amount.toFixed(2)
      }
