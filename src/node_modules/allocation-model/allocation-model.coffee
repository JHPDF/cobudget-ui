### @ngInject ###
module.exports = (BaseModel) ->
  BaseModel.extend
    
    type: "Allocation"

    props:
      userId: "number"
      roundId: "number"
      amount: "decimal"

    serialize: ->
      serialized = BaseModel.prototype.serialize.call(@)
      serialized.amount = serialized.amount.toFixed(2)
      serialized
