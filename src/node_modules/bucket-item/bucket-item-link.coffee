_ = require('lodash')

### @ngInject ###
module.exports = (scope, element, attrs) ->

  round = scope.round
  bucket = scope.bucket

  scope.model = {
    myContributionAmount: scope.bucket.myContribution.amount
  }

  scope.$watch "model.myContributionAmount", (amount, oldAmount) ->

    # if amount is Not a Number (NaN)
    if amount != 0 and not amount
      # don't accept number
      amount = oldAmount

    if round.myAllocationsLeftCents < 0
      bucket.myContribution.amountCents += round.myAllocationsLeftCents

    if amount >= 0
      # ensure progress bar does not overfill
      bucket.myContributionPercentage = Math.min(bucket.myContributionPercentage, 100 - bucket.groupContributionPercentage)

    # save amount to bucket contribution
    bucket.myContribution.amount = amount
