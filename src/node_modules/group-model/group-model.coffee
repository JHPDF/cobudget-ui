_ = require('lodash')

### @ngInject ###
module.exports = (RoundModel) ->
  class GroupModel
    constructor: (data = {}) ->
      @id = data.id
      @name = data.name
      @rounds = _.map data.rounds, (round) ->
        new RoundModel(round)

    isAdmin: (user) ->
      if process.env.NODE_ENV == 'production'
        return user.id == 28
      else
        return user.id == 1
