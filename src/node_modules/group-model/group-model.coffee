### @ngInject ###
module.exports = (BaseModel, BaseCollection, RoundModel) ->
  BaseModel.extend
    
    type: "Group"

    props:
      name: "string"
    
    children:
      rounds: BaseCollection.extend
        model: RoundModel

    isAdmin: (user) ->
      if process.env.NODE_ENV == 'production'
        return user.id == 28
      else
        return user.id == 1

