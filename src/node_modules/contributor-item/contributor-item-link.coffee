_ = require('lodash')
Decimal = require('decimal')

### @ngInject ###
module.exports = (scope, element, attrs) ->

  contributor = scope.contributor

  scope.model = {}
  Object.defineProperties scope.model,
    allocation:
      get: ->
        Number(contributor.allocation.toFixed(2))
      set: (allocation) ->
        contributor.allocation = new Decimal(allocation)
