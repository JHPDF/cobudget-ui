### @ngInject ###
module.exports = ($scope, AuthService, person) ->
  $scope.isCurrentUser = AuthService.getCurrentUser().id == person.id
  $scope.person = person

  $scope.banner = {
    name: "person"
    parent: {
      name: person.name
      ref: "layout.person.profile({ personId: person.id })"
      logo: "img/logo-enspiral.png"
    }
  }

  $scope.tabs = [{
    name: "profile"
    label: "PROFILE"
  }]

  if $scope.isCurrentUser
    $scope.tabs.push({
      name: "settings"
      label: "SETTINGS"
    })
