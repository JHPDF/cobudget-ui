### @ngInject ###
module.exports = ($scope, person) ->
  $scope.person = person

  $scope.banner = {
    name: "person"
    parent: {
      name: person.name
      ref: "layout.person.profile({ personId: person.id })"
      logo: "img/logo-enspiral.png"
    }
  }

  $scope.tabs = [{
    name: "profile"
    label: "PROFILE"
  }]
