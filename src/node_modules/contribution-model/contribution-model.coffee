### @ngInject ###
module.exports = (BaseModel, UserModel) ->
  BaseModel.extend
    
    type: "Contribution"

    props:
      amount: "decimal"
      bucketId: "number"

    children:
      user: UserModel

    serialize: ->
      serialized = BaseModel.prototype.serialize.call(@)
      serialized.amount = serialized.amount.toFixed(2)
      serialized
