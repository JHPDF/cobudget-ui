module.exports = ->
  class FixedCostModel
    constructor: (data = {}) ->
      @id = data.id
      @roundId = data.round_id
      @name = data.name
      @description = data.description
      @amountCents = data.amountCents

    serialize: ->
      {
        id: @id
        round_id: @roundId
        name: @name
        description: @description
        amount_cents: @amountCents
      }

    save: (FixedCostStore) ->
      unsaved = @serialize()
      self = @
      FixedCostStore.save(unsaved).then (saved) ->
        if saved
          self.id = saved.id
