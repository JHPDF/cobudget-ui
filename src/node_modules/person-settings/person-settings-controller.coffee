### @ngInject ###
module.exports = ($scope, $modal, AuthService, person) ->
  $scope.isCurrentUser = AuthService.getCurrentUser().id == person.id
  $scope.person = person

  $scope.openChangePasswordModal = ->
    $modal.open(
      require('password-modal')(
        person: person
      )
    ).result.then (result) ->
      console.log("change password result", result)
