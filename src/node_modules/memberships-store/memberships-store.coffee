### @ngInject ###
module.exports = (RestfulStore, MembershipModel) ->
  class MembershipsStore extends RestfulStore
    path: (params = {}, op) ->
      debug("path", params, op)
      if params.id?
        "#{@baseUrl}/#{@plural}/#{params.id}"
      else if op == "all"
        "#{@baseUrl}/groups/#{params.groupId}/#{@plural}"
      else
        # create
        "#{@baseUrl}/#{@plural}"

  new MembershipsStore(
    singular: "membership"
    plural: "memberships"
    Model: MembershipModel
  )