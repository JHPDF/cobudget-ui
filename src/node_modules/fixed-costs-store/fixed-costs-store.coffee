module.exports = (Restangular) ->

  create: (fixedCost) ->
    Restangular.all('fixed_costs').post(fixedCost)

  update: (fixedCost) ->
    Restangular.one('fixed_costs', fixedCost.id)
    .customPUT(fixedCost, '',
      {fixed_cost: fixedCost},
      {Accept: "application/json"})

  remove: (fixedCost) ->
    Restangular.one('fixed_costs', fixedCost.id)
    .customDELETE('', '', {},
      {Accept: "application/json"})

  save: (fixedCost) ->
    if fixedCost.id
      @update(fixedCost)
    else
      @create(fixedCost)
