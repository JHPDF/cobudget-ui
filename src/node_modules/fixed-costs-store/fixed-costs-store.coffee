module.exports = (Restangular, $http, config) ->

  create: (fixedCost) ->
    Restangular.all('fixed_costs').post(fixedCost)

  update: (fixedCost) ->
    $http(
      url: config.apiEndpoint + '/fixed_costs/' + fixedCost.id
      method: "PUT"
      data: fixedCost
      headers:
        Accept: "application/json"
      withCredentials: true
    )

  save: (fixedCost) ->
    if fixedCost.id
      @update(fixedCost)
    else
      @create(fixedCost)
